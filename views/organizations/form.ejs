<%- include('../partials/header') %>
<div class="card">
    <div class="card-header">
        <h2><%= organization ? 'Edit' : 'New' %> Organization</h2>
        <a href="/organizations" class="btn btn-secondary">Back</a>
    </div>
    <% if (typeof error !== 'undefined' && error) { -%>
    <div class="error"><%= error %></div>
    <% } -%>
    <form method="POST" action="<%= organization ? '/organizations/' + organization.id : '/organizations' %>">
        <div class="form-group">
            <label for="orgId">Organization ID *</label>
            <input type="text" id="orgId" name="orgId" value="<%= organization ? organization.orgId : '' %>" required>
            <small style="color: #666; font-size: 0.9rem;">Unique identifier for the organization (used in RFID scans)</small>
        </div>
        <div class="form-group">
            <label for="name">Name *</label>
            <input type="text" id="name" name="name" value="<%= organization ? organization.name : '' %>" required>
        </div>
        <div class="actions">
            <button type="submit" class="btn btn-success"><%= organization ? 'Update' : 'Create' %> Organization</button>
            <a href="/organizations" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
<%- include('../partials/footer') %>
