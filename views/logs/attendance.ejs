<%- include('../partials/header') %>
<div class="card">
    <div class="card-header">
        <h2>Attendance Logs</h2>
    </div>
    
    <!-- Filters -->
    <form method="GET" action="/logs/attendance" style="margin-bottom: 1.5rem; padding: 1rem; background: #f8f9fa; border-radius: 4px;">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
            <div class="form-group" style="margin-bottom: 0;">
                <label for="orgId">Organization</label>
                <select id="orgId" name="orgId">
                    <option value="">All Organizations</option>
                    <% organizations.forEach(org => { -%>
                    <option value="<%= org.id %>" <%= filters.orgId == org.id ? 'selected' : '' %>><%= org.name %></option>
                    <% }); -%>
                </select>
            </div>
            <div class="form-group" style="margin-bottom: 0;">
                <label for="guardId">Guard</label>
                <select id="guardId" name="guardId">
                    <option value="">All Guards</option>
                    <% guards.forEach(guard => { -%>
                    <option value="<%= guard.id %>" <%= filters.guardId == guard.id ? 'selected' : '' %>><%= guard.name %></option>
                    <% }); -%>
                </select>
            </div>
            <div class="form-group" style="margin-bottom: 0;">
                <label for="attendancePointId">Attendance Point</label>
                <select id="attendancePointId" name="attendancePointId">
                    <option value="">All Points</option>
                    <% attendancePoints.forEach(point => { -%>
                    <option value="<%= point.id %>" <%= filters.attendancePointId == point.id ? 'selected' : '' %>><%= point.name %></option>
                    <% }); -%>
                </select>
            </div>
            <div class="form-group" style="margin-bottom: 0;">
                <label for="date">Date</label>
                <input type="date" id="date" name="date" value="<%= filters.date %>">
            </div>
        </div>
        <div style="margin-top: 1rem;">
            <button type="submit" class="btn">Filter</button>
            <a href="/logs/attendance" class="btn btn-secondary">Clear</a>
        </div>
    </form>

    <div style="margin-bottom: 1rem; color: #666;">
        Showing <%= attendances.length %> of <%= total %> records (Page <%= page %> of <%= totalPages %>)
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Guard</th>
                <th>RFID</th>
                <th>Attendance Point</th>
                <th>Point RFID</th>
                <th>Machine</th>
                <th>Organization</th>
                <th>Scanned At</th>
            </tr>
        </thead>
        <tbody>
            <% if (attendances.length === 0) { -%>
            <tr>
                <td colspan="8" style="text-align: center; padding: 2rem;">No attendance records found.</td>
            </tr>
            <% } else { -%>
            <% attendances.forEach(attendance => { -%>
            <tr>
                <td><%= attendance.id %></td>
                <td><%= attendance.guard.name %></td>
                <td><%= attendance.guard.rfid %></td>
                <td><%= attendance.attendancePoint.name %></td>
                <td><%= attendance.attendancePoint.rfid %></td>
                <td><%= attendance.machine.machineId %><%= attendance.machine.name ? ' (' + attendance.machine.name + ')' : '' %></td>
                <td><%= attendance.organization.name %></td>
                <td><%= new Date(attendance.scannedAt).toLocaleString() %></td>
            </tr>
            <% }); -%>
            <% } -%>
        </tbody>
    </table>

    <!-- Pagination -->
    <% if (totalPages > 1) { -%>
    <div style="margin-top: 1.5rem; display: flex; justify-content: center; gap: 0.5rem; align-items: center;">
        <% if (page > 1) { -%>
        <a href="?page=<%= page - 1 %><%= filters.orgId ? '&orgId=' + filters.orgId : '' %><%= filters.guardId ? '&guardId=' + filters.guardId : '' %><%= filters.attendancePointId ? '&attendancePointId=' + filters.attendancePointId : '' %><%= filters.date ? '&date=' + filters.date : '' %>" class="btn btn-secondary">Previous</a>
        <% } -%>
        <span>Page <%= page %> of <%= totalPages %></span>
        <% if (page < totalPages) { -%>
        <a href="?page=<%= page + 1 %><%= filters.orgId ? '&orgId=' + filters.orgId : '' %><%= filters.guardId ? '&guardId=' + filters.guardId : '' %><%= filters.attendancePointId ? '&attendancePointId=' + filters.attendancePointId : '' %><%= filters.date ? '&date=' + filters.date : '' %>" class="btn btn-secondary">Next</a>
        <% } -%>
    </div>
    <% } -%>
</div>
<%- include('../partials/footer') %>
