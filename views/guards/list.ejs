<%- include('../partials/header') %>
<div class="card">
    <div class="card-header">
        <h2>Guards</h2>
        <a href="/guards/new" class="btn btn-success">Add New</a>
    </div>
    <% if (typeof error !== 'undefined' && error) { -%>
    <div class="error"><%= error %></div>
    <% } -%>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>RFID</th>
                <th>Name</th>
                <th>Employee ID</th>
                <th>Organization</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (guards.length === 0) { -%>
            <tr>
                <td colspan="7" style="text-align: center; padding: 2rem;">No guards found. <a href="/guards/new">Create one</a></td>
            </tr>
            <% } else { -%>
            <% guards.forEach(guard => { -%>
            <tr>
                <td><%= guard.id %></td>
                <td><%= guard.rfid %></td>
                <td><%= guard.name %></td>
                <td><%= guard.employeeId || '-' %></td>
                <td><%= guard.organization.name %></td>
                <td><%= new Date(guard.createdAt).toLocaleDateString() %></td>
                <td class="actions">
                    <a href="/guards/<%= guard.id %>/edit" class="btn btn-secondary">Edit</a>
                    <form action="/guards/<%= guard.id %>/delete" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); -%>
            <% } -%>
        </tbody>
    </table>
</div>
<%- include('../partials/footer') %>
