<%- include('../partials/header') %>
<div class="card">
    <div class="card-header">
        <h2>Patrol Points</h2>
        <a href="/patrol-points/new" class="btn btn-success">Add New</a>
    </div>
    <% if (typeof error !== 'undefined' && error) { -%>
    <div class="error"><%= error %></div>
    <% } -%>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>RFID</th>
                <th>Name</th>
                <th>Location</th>
                <th>Organization</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (patrolPoints.length === 0) { -%>
            <tr>
                <td colspan="7" style="text-align: center; padding: 2rem;">No patrol points found. <a href="/patrol-points/new">Create one</a></td>
            </tr>
            <% } else { -%>
            <% patrolPoints.forEach(point => { -%>
            <tr>
                <td><%= point.id %></td>
                <td><%= point.rfid %></td>
                <td><%= point.name %></td>
                <td><%= point.location || '-' %></td>
                <td><%= point.organization.name %></td>
                <td><%= new Date(point.createdAt).toLocaleDateString() %></td>
                <td class="actions">
                    <a href="/patrol-points/<%= point.id %>/edit" class="btn btn-secondary">Edit</a>
                    <form action="/patrol-points/<%= point.id %>/delete" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); -%>
            <% } -%>
        </tbody>
    </table>
</div>
<%- include('../partials/footer') %>
