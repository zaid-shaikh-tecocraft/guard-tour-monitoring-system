<%- include('../partials/header') %>
<div class="card">
    <div class="card-header">
        <h2>Attendance Assignments</h2>
        <a href="/attendance-assignments/new" class="btn btn-success">Add New</a>
    </div>
    <% if (typeof error !== 'undefined' && error) { -%>
    <div class="error"><%= error %></div>
    <% } -%>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Guard</th>
                <th>Attendance Point</th>
                <th>Organization</th>
                <th>Status</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (assignments.length === 0) { -%>
            <tr>
                <td colspan="8" style="text-align: center; padding: 2rem;">No assignments found. <a href="/attendance-assignments/new">Create one</a></td>
            </tr>
            <% } else { -%>
            <% assignments.forEach(assignment => { -%>
            <tr>
                <td><%= assignment.id %></td>
                <td><%= assignment.guard.name %> (<%= assignment.guard.rfid %>)</td>
                <td><%= assignment.attendancePoint.name %></td>
                <td><%= assignment.organization.name %></td>
                <td>
                    <span class="badge <%= assignment.isActive ? 'badge-active' : 'badge-inactive' %>">
                        <%= assignment.isActive ? 'Active' : 'Inactive' %>
                    </span>
                </td>
                <td><%= assignment.startDate ? new Date(assignment.startDate).toLocaleDateString() : '-' %></td>
                <td><%= assignment.endDate ? new Date(assignment.endDate).toLocaleDateString() : '-' %></td>
                <td class="actions">
                    <a href="/attendance-assignments/<%= assignment.id %>/edit" class="btn btn-secondary">Edit</a>
                    <form action="/attendance-assignments/<%= assignment.id %>/delete" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); -%>
            <% } -%>
        </tbody>
    </table>
</div>
<%- include('../partials/footer') %>
